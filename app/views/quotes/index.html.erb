<p style="color: green"><%= notice %></p>

<h1>Quotes</h1>

<div id="quotes">
  <% @quotes.each do |quote| %>
    <%= render quote %>
    <p>
      <%= link_to "Show this quote", quote %>
    </p>
  <% end %>
</div>

<%= turbo_frame_tag "first_turbo_frame" do %>
  <%= link_to "New quote", new_quote_path %>
<% end %>